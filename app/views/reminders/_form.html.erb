<%= form_for(@reminder) do |f| %>
  <% if @reminder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reminder.errors.count, "error") %> prohibited this reminder from being saved:</h2>

      <ul>
      <% @reminder.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>
  <div class="field">
    <%= f.label :completed %><br>
    <%= f.check_box :completed %>
  </div>
  <div class="field">
    <%= f.label :notify_datetime %><br>
    <%= f.text_field :notify_datetime, class: 'picker' %>
  </div>

  <div class="field">
    <%= f.label :prefered_contact %><br>
    <%= f.text_field :prefered_contact %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">

    var now = new Date();
    $('.picker').datetimepicker({
      hour: now.getHours(),
      minute: now.getMinutes(),
      minDate: now
    });
    
</script>

